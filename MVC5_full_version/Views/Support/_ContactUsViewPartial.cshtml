@model MVC5_full_version.Models.Support.ContactUsModel

<script src="~/Scripts/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
    $('#sendMail').click(function () {
        var data = {
            Topic: $('#tbTopic').val(),
            Description: $('#tbDescription').val()
        };

        $.ajax({
            type: 'POST',
            url: '/Support/ContactUs',
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            success: function () {
                alert('Done');
            },
            error: function () {
                alert('Error');
            }
        });

    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Contact Us </h3>

    </div>
    <div class="panel-body">

        @using (Ajax.BeginForm("ContactUs", "Support", new AjaxOptions { OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Topic, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Topic, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
            </div>

            <br />
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" id="sendEmail" value="Send Mail" class="btn btn-default" />
                </div>
            </div>

        }
    </div>
</div>
