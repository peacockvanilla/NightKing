
@using (Html.BeginForm("UploadPicture", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()

    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="file" id="postFile" name="postFile" class="btn btn-success">
            <p class="help-block">Please select only .png or .jpg/.jpeg file.</p>
            <input type="button" id="btnUpdatePicture" value="Update" class="btn btn-primary" />
        </div>
    </div>
    

}