@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Dashboard";
}

<div class="pageheader">
    <h1>Dashboard</h1>
   
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</div>
<section id="main-content">

    <div class="row">
        
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
           
                <div class="panel panel-solid-success widget-mini">
                    <div class="panel-body">
                        <i><img src="~/Images/Stru/eth.png" height="33" width="33" /></i>
                        <span class="total text-center">$3,200</span>
                        <span class="title text-center">ETH Wallet</span>
                    </div>
                </div>
           
            </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
            <div class="panel widget-mini">
                <div class="panel-body">
                    @*<i><img src="~/Images/Stru/40px.png" height="30" width="30"/></i>*@
                    <span class="total text-center">1,230</span>
                    <span class="title text-center">DEMO Wallet</span>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
            <div class="panel widget-mini">
                <div class="panel-body">
                    <i class="icon-envelope-open"></i>
                    <span class="total text-center">1,680</span>
                    <span class="title text-center">Referals</span>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
            <div class="panel panel-solid-info widget-mini">
                <div class="panel-body">
                    <i class="icon-user"></i>
                    <span class="total text-center">12.34</span>
                    <span class="title text-center">Rewards</span>
                </div>
            </div>
        </div>

        </div>
        
    <div class="row">
       @Html.Partial("/Views/Dashboard/_ReferalLinkPartial.cshtml")
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">DEMO Lending Program</h3>
                    <div class="reportdate actions">
                        <i class="fa fa-calendar-o"></i>
                        <span>Jan 1 - June 30</span>
                        <b class="caret"></b>
                    </div>
                </div>
                <div class="panel-body server-chart">
                    <div class="row">
                        <div class="col-md-12 col-lg-4">
                            <ul>
                                <li>
                                    <span class="text-left">Structure Margin</span>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%">
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <span class="text-left">Your progress</span>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <p>@*Structure*@ Lending Program is designed to provide you daily benefits and dividends based on your investment</p>
                        </div>
                        <div class="col-md-12 col-lg-8">
                            <div class="row">
                                <div class="col-md-12 col-lg-6">
                                    <div class="line-chart">
                                        <canvas id="canvas1" height="100"></canvas>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-6">
                                    <div class="bar-chart">
                                        <canvas id="canvas2" height="100"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</section>


@section Styles {
    @Styles.Render("~/plugins/daterangepickerCSS")
}


<!--Load these page level functions-->
@section Scripts {
    @Scripts.Render("~/plugins/countTo")
    @Scripts.Render("~/plugins/skycons")
    @Scripts.Render("~/plugins/moment")
    @Scripts.Render("~/plugins/daterangepicker")
    @Scripts.Render("~/plugins/chartjs")
    @Scripts.Render("~/plugins/morris")
    @Scripts.Render("~/plugins/raphael")
    @Scripts.Render("~/plugins/jvectormap")
    @Scripts.Render("~/plugins/jvectormap-world")
    @Scripts.Render("~/plugins/gauge")
    @Scripts.Render("~/plugins/gauge-demo")
    @Scripts.Render("~/plugins/calendar")
    @Scripts.Render("~/plugins/calendar-demo")
    @Scripts.Render("~/plugins/underscore")


<script>
    $(document).ready(function () {
        app.dateRangePicker();
        app.chartJs();
        app.weather();
        app.spinStart();
        app.spinStop();
    });
</script>
}