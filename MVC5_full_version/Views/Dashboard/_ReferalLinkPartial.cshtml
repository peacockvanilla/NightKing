@using Microsoft.AspNet.Identity

<script>
function myFunction() {
    var copyText = document.getElementById("txtReferal");
  copyText.select();
  document.execCommand("Copy");
 // alert("Copied the text: " + copyText.value);
}
</script>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Refer</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4"><p>Refer Friends and Earn Bonus</p></div>
                <div class="col-md-8">
                    
                    <input type="text" id="txtReferal" value="http://localhost:61272/Account/Register?refCode=@User.Identity.GetUserName() "/>
                    <input type="button" value="Copy" onclick="myFunction();"/>
                </div>
                
            </div>
        </div>
    </div>
</div>
